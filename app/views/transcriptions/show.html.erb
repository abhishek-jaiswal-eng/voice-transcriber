<h1 class="page-title">Audio <%= @transcription.id %></h1>
<p class="upload-time">Uploaded at: <%= @transcription.created_at.strftime("%d %b %Y %H:%M") %></p>

<div class="audio-container">
  <% if @transcription.audio_file.attached? %>
    <audio controls class="audio-player">
      <source src="<%= url_for(@transcription.audio_file) %>" type="<%= @transcription.audio_file.content_type %>">
      Your browser does not support the audio element.
    </audio>
  <% else %>
    <p class="no-audio">No audio uploaded.</p>
  <% end %>
</div>

<div class="text-content">
  <h2>Transcription</h2>
  <p class="transcription-text"><%= @transcription.transcription || "Not transcribed yet" %></p>

  <h2>Summary</h2>
  <p class="summary-text"><%= @transcription.summary || "Summary not generated yet" %></p>
</div>

<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f7f8fa;
    color: #333;
    padding: 20px;
  }

  .page-title {
    text-align: center;
    color: #2c3e50;
    margin-bottom: 10px;
    font-size: 2rem;
    text-shadow: 1px 1px #fff;
  }

  .upload-time {
    text-align: center;
    color: #7f8c8d;
    margin-bottom: 30px;
    font-size: 0.95rem;
  }

  .audio-container {
    text-align: center;
    margin-bottom: 40px;
  }

  .audio-player {
    width: 100%;
    max-width: 600px;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  }

  .no-audio {
    text-align: center;
    font-style: italic;
    color: #7f8c8d;
  }

  .text-content {
    max-width: 700px;
    margin: 0 auto 40px auto;
    background-color: #fff;
    padding: 25px 30px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  .text-content h2 {
    color: #2980b9;
    margin-top: 20px;
    margin-bottom: 10px;
    font-size: 1.5rem;
    border-bottom: 2px solid #ecf0f1;
    padding-bottom: 5px;
  }

  .transcription-text, .summary-text {
    font-size: 1rem;
    line-height: 1.6;
    color: #2c3e50;
    background-color: #fdfdfd;
    padding: 15px;
    border-radius: 6px;
    box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
  }

  @media (max-width: 768px) {
    .text-content, .audio-player {
      width: 95%;
      padding: 20px;
    }
  }
</style>
